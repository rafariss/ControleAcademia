<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="38*"/>

        </Grid.ColumnDefinitions>
        <Button x:Name="CadastroAluno" Content="Cadastrar Aluno" HorizontalAlignment="Left" Margin="0,36,0,0" VerticalAlignment="Top" Width="97" Click="CadastroAluno_Click" Height="22"/>
        <Button x:Name="btnServico" Content="Cadastrar Serviço" HorizontalAlignment="Left" Margin="0,63,0,0" VerticalAlignment="Top" Width="97" IsDefault="True" Height="24" Click="btnServico_Click"/>
    </Grid>
</Window>
